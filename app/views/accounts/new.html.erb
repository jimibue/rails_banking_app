<h1>New Account</h1>
<%= form_with(model:@account, local:true) do |f|%>
  <div class='field'>
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: 'Name'%>
  </div>
  <div class='field'>
    <%= f.label :balance %>
    <%= f.number_field :balance, required: true, min: 0%>
  </div>
  <%= f.submit%>
<%end%>
